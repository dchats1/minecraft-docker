FROM openjdk:17

RUN mkdir /minecraft \
    && cd /minecraft \
    && curl -o installer.jar https://maven.fabricmc.net/net/fabricmc/fabric-installer/0.11.2/fabric-installer-0.11.2.jar \
    && java -jar installer.jar server -mcversion 1.19.4 -downloadMinecraft \
    && rm installer.jar \
    && mv server.jar vanilla.jar \
    && mv fabric-server-launch.jar server.jar \
    && echo "serverJar=vanilla.jar" > fabric-server-launcher.properties


COPY entrypoint.sh /bin/entrypoint.sh
COPY eula.txt /minecraft/eula.txt

VOLUME ["/minecraft"]
WORKDIR /minecraft/

EXPOSE 25565/tcp

ENTRYPOINT [ "/bin/entrypoint.sh" ]
